<!DOCTYPE html>
<html lang="en">
<!-------------------------HEAD-------------------------->
<%- include('../partials/head') %>

<body>
    <!-----------------------HEADER-------------------------->
    <%- include('../partials/header') %>
    <!-------------------------MAIN------------------------------->
    <main>
        <% if (admin == true) { %>
            <h2 class="titulo-admin">VISTA DE ADMINISTRACIÓN</h2>
        <%}%>
        <h1 class="titulo">TIENDA</h1>
        <% if (admin == true) { %>
            <a class="botones-admin naranja" href="/tienda/newProduct">AGREGAR NUEVO PRODUCTO</a>
        <%}%>
        <div class="volver">
            <a href="/"><i class="fa-solid fa-arrow-rotate-left"></i> Volver a la Página Principal</a>
            <p></p>
            <div class="filtros">
                <label for="filtros"><span style="text-align:right"></span>
                    <select name="filtros" id="filtros" required> 
                        <option value="Sin categoría">FILTRAR POR</option> 
                        <option value="Cuerdas">Marcas</option>
                        <option value="Percusión">Categorías</option>
                        <option value="Teclas">Más Recientes</option>
                        <option value="Vientos">Más Baratos</option>                           
                    </select>
                    <select name="ordenar-por" id="ordenador" required> 
                        <option value="Sin categoría">ORDENAR POR</option> 
                        <option value="Cuerdas">A-Z</option>
                        <option value="Percusión">Z-A</option>
                        <option value="Teclas">Más Recientes</option>
                        <option value="Vientos">Más Baratos</option>
                        <option value="Vientos">Más Caros</option>                                
                    </select>
            </label>
            </div>
        </div>
        
        <section id="productos-destacados">
        </section>
        <div class="pagina">
            <div class="busqueda-paginacion">
                <ul>
                    <li class="pagina-anterior">
                        <span class="pagina-anterior">Anterior</span>
                    </li>
                    <li class="pagina-corriente">
                        <span class="pagina-1">1 </span>
                    </li>
                    <li class="pagina-de-hasta">de  1</li>
                    <li class="pagina-siguiente">
                        <span class="titulo-flecha-sig">Siguiente</span>
                    </li>
                </ul>
            </div>
        </div>
    </main>
    <!-------------------------FOOTER------------------------------->
    <%- include('../partials/footer') %>
	<script src="/js/productos.js"></script><!-- 
	<script src="/js/productosFiltrar.js"></script>
	<script src="/js/productosBuscar.js"></script> -->
</body>
</html>